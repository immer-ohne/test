	<input type="text" placeholder="Dein Name (mit oder ohne)" name="name" />
	<textarea id="message" placeholder="Deine Nachricht" name="message" cols="50" rows="6" required></textarea>
	<input type="submit" name="submit" value="Senden" />
</form>
